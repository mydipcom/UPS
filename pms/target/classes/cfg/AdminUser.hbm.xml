<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.uswop.pms.dto.TadminUser" table="admin_user" lazy="false">
		<id name="userId" type="string">
			<column name="user_id" />
			<generator class="assigned"></generator>
		</id>		
		<property name="password" type="java.lang.String">
            <column name="password" length="50" not-null="true"/>
        </property>
        <property name="realName" type="java.lang.String">
            <column name="real_name" length="50" not-null="false"/>
        </property>
        <many-to-one name="adminRole" column="role_id" class="com.uswop.pms.dto.TadminRole" unique="true" not-null="true"/>
        
        <property name="mobilePhone" type="java.lang.String">
        	<column name="mobile_phone" length="50" not-null="false"/>
        </property>
        <property name="email" type="java.lang.String">
        	<column name="email" length="100" not-null="false"/>
        </property>
        
        <property name="status" type="java.lang.Boolean">
            <column name="status"/>
        </property>
            
        <property name="createdBy" type="java.lang.String">
        	<column name="created_by" length="20" not-null="false"/>
        </property>
        <property name="updateBy" type="java.lang.String">
        	<column name="update_by" length="20" not-null="false"/>
        </property>
        
        <property name="updateTime" type="java.lang.Long">
            <column name="update_time" length="20"/>              
        </property>        
	</class>
</hibernate-mapping>